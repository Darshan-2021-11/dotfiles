#!/bin/sh

if [ $# -eq 0 ]
then
	# echo Volume: $(pamixer --get-volume-human)
	echo ó°•¾ $(pamixer --get-volume-human)
elif [ $# -eq 1 ]
then
	min_volume=0
	max_volume=200
	if [ $1 -le $max_volume ] && [ $1 -ge $min_volume ]
	then
		pamixer --allow-boost --set-volume $1
	elif [ $1 -lt $min_volume ]
	then
		pamixer --set-volume $min_volume
		echo Minimum volume is $min_volume
		echo Volume is set to $min_volume
	else [ $1 -gt $max_volume ]
		pamixer --allow-boost --set-volume $1
		echo Maximum volume is $max_volume
		echo Volume is set to $max_volume
	fi
fi
